    //    var row = table.insertRow();
    //    row.id = "row-"+id;
    //    var cell1 = row.insertCell(0);
    //    cell1.innerHTML = table.rows.length - 1;

    //    var cell2 = row.insertCell(1);
    //    cell2.id = "category-" + id;
    //    cell2.innerHTML = name;

    //    var cell3 = row.insertCell(2);
    //    cell3.innerHTML = '0';

    //    var cell4 = row.insertCell(3);
    //    cell4.className = "table-td-center";
    //    cell4.innerHTML = '<button class="btn btn-primary btn-sm trash" type="button" title="Xóa" onclick="getCategoryById(' + id + ')" data-toggle="modal" data-target="#deleteModal"><i class="fa fa-trash"></i></button>'
    //        + '<button class="btn btn-primary btn-sm edit" type = "button" title = "Sửa" id = "show-emp" onclick="getCategoryById(' + id + ')" data-toggle="modal" data-target="#exampleModal"><i class="fa fa-edit"></i></button>';
    //}
    function getCategoryById(id) {
        var name = document.getElementById("name");

        var request = new XMLHttpRequest();
        request.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var res = JSON.parse(this.responseText);
                idUpdate = res.id;
                name.value = res.name;
            }
        };
        request.open("GET", "/admin/category/" + id, true);
        request.send();
    }
    function openModalCreate() {
        idUpdate = 0;
    }
    function closeModal() {
        document.getElementById("name").value = "";
        document.getElementById("error").innerHTML = "";
    }
    function deleteCategory() {
        var request = new XMLHttpRequest();
        request.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                if (this.responseText != "") {
                    var res = JSON.parse(this.responseText);
                    if (res.message != null) {
                        alert(res.message);
                        return;
                    }
                }
                document.getElementById("btnCloseModalDelete").click();
                document.getElementById('tblCategory').deleteRow(document.getElementById("row-" + idUpdate).rowIndex);
            
            }
        };
        request.open("POST", "/admin/category/delete/" + idUpdate, true);
        request.send();
    }

        // hàm search
    const btnSearch = document.getElementById("btnSearch");

    btnSearch.onclick = search;
    document.getElementById("keyword").oninput = search;

    function search() {
        var keyword = document.getElementById("keyword").value;
        console.log("keyword: " + keyword);
        const request = new XMLHttpRequest();
        request.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var res = JSON.parse(this.responseText);
               // document.getElementById("countsearchresult").innerHTML = "Đã tìm được " + res.length + " kết quả";
                var html = "";
                for (var i = 0; i < res.length; i++) {
                    var category = res[i];
                    console.log("category: " + category);
                    html += `<tr id="row-${category.id}">
                                        <td>${i + 1}</td>
                                            <td id="category-${category.id}">${category.name}</td>

                                        <td class="table-td-center">
                                            <button class="btn btn-primary btn-sm trash" type="button" title="Xóa"
                                                    onclick="getCategoryById(${category.id})" data-toggle="modal" data-target="#deleteModal">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                            <button class="btn btn-primary btn-sm edit" type="button" title="Sửa" id="show-emp"
                                                    onclick="getCategoryById(${category.id})" data-toggle="modal" data-target="#exampleModal">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                        </td>
                                    </tr>`;
                }
                document.getElementById("categoryBody").innerHTML = html;
            }
        };
        //request.open("GET", '/admin/post/Search/' + encodeURIComponent(keyword), true);
        request.open("GET", '/admin/category/search?keyword=' + keyword, true);
        request.send();
    }
</script>