@model PagedList.IPagedList<Category>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@*@model IEnumerable<ReviewSocial.Models.Category>*@
@{
    Layout = "_AdminLayout";
    string sortByValue = HttpContextAccessor.HttpContext.Request.Query["sortBy"];
    string page = HttpContextAccessor.HttpContext.Request.Query["page"];
}
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">

                <div class="row element-button">
                    <div class="col-sm-2">
                        <button class="btn btn-add btn-sm" title="Thêm" data-toggle="modal" data-target="#exampleModal" onclick="openModalCreate()">
                            <i class="fa fa-plus"></i>
                            Thêm danh mục mới
                        </button>
                    </div>
                   @* <div class="col-md-6 d-flex justify-content-end">
                        <form class="form-inline">
                            <div class="form-group">
                                <input type="text" class="form-control h-auto mr-2" name="keyword" id="keyword" placeholder="Tìm kiếm ...">
                            </div>
                            <button type="button" class="btn btn-primary m-auto" id="btnSearch">Tìm</button>
                        </form>
                    </div>*@
                   @* <p id="countsearchresult">Đã tìm được </p>*@
                </div>
               
                <table class="table table-hover table-bordered" id="tblCategory" cellpadding="0" cellspacing="0" border="0">
                    <thead>
                        <tr>
                           @* <th width="10"><input type="checkbox" id="all"></th>*@
                            <th width="10">STT</th>
                            <th width="150">
                                <a href="/admin/category?page=@(page)&sortBy=@(sortByValue != "category_name_asc" ? "category_name_asc" : "category_name_desc")">Danh mục</a>
                                @if (sortByValue == "category_name_asc" || sortByValue == "category_name_desc")
                                {
                                    <i class="fa fa-caret-@(sortByValue != "category_name_asc" ? "up" : "down")" aria-hidden="true"></i>
                                }
                            </th>
                           @* <th>Danh mục</th>*@
                           @* <th>Tổng số bài viết</th>*@
                            <th width="100">Tính năng</th>
                        </tr>
                    </thead>
                    <tbody id="categoryBody">
                        @{
                            var count = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr id="row-@item.Id">
                                @*  <td width="10"><input type="checkbox" name="check1" value="1"></td>*@
                                <td>@count</td>
                                <td id="category-@item.Id">@item.Name</td>
                              @*  <td id="category-@item.Id">@item.Name (@item.Posts.Count)</td>*@
                                @*<td>@item.Posts.Count</td>*@
                                <td class="table-td-center">
                                    <button class="btn btn-primary btn-sm trash" type="button" title="Xóa"
                                            onclick="getCategoryById(@item.Id)" data-toggle="modal" data-target="#deleteModal">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                    <button class="btn btn-primary btn-sm edit" type="button" title="Sửa" id="show-emp"
                                            onclick="getCategoryById(@item.Id)" data-toggle="modal" data-target="#exampleModal">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                </td>
                            </tr>
                            count++;
                        }

                    </tbody>
                </table>
            </div>
            <nav aria-label="...">
                <ul class="pagination justify-content-center">
                    @if (!Model.IsFirstPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/admin/category?sortBy=@sortByValue">&laquo;</a>
                        </li>
                        <li class="page-item @(Model.IsFirstPage ? "disabled" : "")">
                            <a class="page-link" href="/admin/category?page=@(Model.PageNumber - 1)&sortBy=@sortByValue">&#8249;</a>
                        </li>
                    }
                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")"><a class="page-link" href="/admin/category?page=@i&sortBy=@sortByValue">@i</a></li>
                    }
                    @if (!Model.IsLastPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/admin/category?page=@(Model.PageNumber + 1)&sortBy=@sortByValue">&#8250;</a>
                        </li>
                        <li class="page-item @(Model.IsLastPage ? "disabled" : "")">
                            <a class="page-link" href="/admin/category?page=@(Model.PageCount)&sortBy=@sortByValue">&raquo;</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

@*- Modal thêm_sửa-->*@
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="form-group  col-md-12">
                        <div class="modal-header">
                            <h5 style="color:black">Thêm danh mục mới</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="closeModal()">
                                <span aria-hidden="true" style="color:black; font-size: 20px">&times;</span>
                            </button>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label class="control-label">Nhập tên danh mục mới</label>
                        <input class="form-control" type="text" id="name" placeholder="Tên danh mục">
                        <small id="error" class="form-text text-danger"></small>
                    </div>
                </div>
                @*   <br>
                <button class="btn btn-save" type="button">Lưu lại</button>
                <a class="btn btn-cancel" data-dismiss="modal" href="#">Hủy bỏ</a>
                <br>*@
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="btnCloseModal" data-dismiss="modal" onclick="closeModal()">Đóng</button>
                    <button type="button" class="btn btn-primary" onclick="checkUpdate()">Lưu</button>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
@*- Modal xóa -->*@
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel" style="color:black">Xác nhận xóa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa danh mục này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCloseModalDelete" class="btn btn-secondary" data-dismiss="modal" onclick="closeModal()">Hủy</button>
                <button type="button" class="btn btn-danger" onclick="deleteCategory()">Xóa</button>
            </div>
        </div>
    </div>
</div>
<script>
    var idUpdate = 0;
    function checkUpdate() {
        if (idUpdate == 0) {
            createCategory();
        } else {
            updateCategory();
        }
    }
    function createCategory() {
        var name = document.getElementById("name");
        var error = document.getElementById("error");
        if (name.value == "") {
            error.innerHTML = "Vui lòng nhập tên danh mục"
            name.focus;
            return;
        }
        //if (name.value.length >10) {
        //    error.innerHTML = "Tên danh mục không vượt quá 10 kí tự"
        //    name.focus;
        //    return;
        //}
        var category = {
            "name": name.value
        }
        var request = new XMLHttpRequest();
        request.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var res = JSON.parse(this.responseText);
                if (res.message != null) {
                    error.innerHTML = res.message;
                    return;
                }
                addRowToTable(res.id, res.name);
                document.getElementById('btnCloseModal').click();
            }
        };
        request.open("POST", "/admin/category/create", true);
        request.setRequestHeader("Content-type", "application/json");
        request.send(JSON.stringify(category));
    }
    function updateCategory() {
        var name = document.getElementById("name");
        var error = document.getElementById("error");
        if (name.value == "") {
            error.innerHTML = "Vui lòng nhập tên nhóm danh mục";
            name.focus();
            return;
        }

        var category = {
            "name": name.value
        }
        var request = new XMLHttpRequest();
        request.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                console.log(this.responseText);
                var res = JSON.parse(this.responseText);
                if (res.message != null) {
                    error.innerHTML = res.message;
                    return;
                }
                document.getElementById("category-" + res.id).innerHTML = res.name;
                document.getElementById("btnCloseModal").click();
            }
        };
        request.open("POST", "/admin/category/update/" + idUpdate, true);
        request.setRequestHeader("Content-type", "application/json");
        request.send(JSON.stringify(category));
    }
    function addRowToTable(id, name) {
        var table = document.getElementById("tblCategory");
        var row = table.insertRow();
        row.id = "row-" + id;
        var cell1 = row.insertCell(0);
        cell1.innerHTML = table.rows.length - 1;

        var cell2 = row.insertCell(1);
        cell2.id = "category-" + id;
        cell2.innerHTML = name;

        //var cell3 = row.insertCell(2);
        //cell3.innerHTML = '0';

        var cell3 = row.insertCell(2);
        cell3.className = "table-td-center";
        cell3.innerHTML = '<button class="btn btn-primary btn-sm trash" type="button" title="Xóa" onclick="getCategoryById(' + id + ')" data-toggle="modal" data-target="#deleteModal"><i class="fa fa-trash"></i></button>'
            + '<button class="btn btn-primary btn-sm edit" type = "button" title = "Sửa" id = "show-emp" onclick="getCategoryById(' + id + ')" data-toggle="modal" data-target="#exampleModal"><i class="fa fa-edit"></i></button>';
    }
